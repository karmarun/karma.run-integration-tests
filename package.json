{
  "name": "karma.run-integration-tests",
  "version": "1.0.0",
  "description": "Karma integration tests",
  "engines": {
    "node": ">=8.0.0",
    "yarn": ">=1.6.0"
  },
  "scripts": {
    "watch": "run-p watch:*",
    "clean": "rm -r ./dist || true",
    "build": "tsc",
    "watch:build": "tsc -w",
    "test": "npm run clean && npm run build && ava dist/** --serial --verbose",
    "watch:test": "ava dist/** --serial --watch --verbose",
    "test-nyan": "npm run build && ava dist/** --serial --tap | tap-nyan"
  },
  "keywords": [
    "karma.run"
  ],
  "private": true,
  "author": "karma.run",
  "license": "MIT",
  "dependencies": {
    "@karma.run/sdk": "^0.5.15",
    "ava": "^1.0.0-beta.4",
    "dotenv": "4.0.0",
    "tap-nyan": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^10.0.0",
    "npm-run-all": "^4.1.2",
    "tslint": "^5.9.1",
    "typescript": "^3.0.1"
  }
}
