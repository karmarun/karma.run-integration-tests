{
  "include": ["src/**/*"],
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "moduleResolution": "node",
    "declaration": true,
    "module": "commonjs",
    "sourceMap": true,
    "target": "es2017",
    "lib": ["es2017"],
    "types": [
      "@types/node"
    ]
  }
}
